/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    stages {
        state('dir') {
            dir(path: 'softtool-docker')
        }
        stage('Build docker') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Push to docker hub') {
            steps {
                sh 'docker-compose push'
            }
        }
        stage('Trigger Slave') {
            steps {
                script {
                    build job: 'slave'
                }
            }
        }
    }
}