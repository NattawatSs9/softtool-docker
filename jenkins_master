pipeline {
    agent any

    environment {
        DOCKER_HUB_REGISTRY = 'https://index.docker.io/v1/'
        DOCKER_HUB_USERNAME = credentials('nattawat2345')
        DOCKER_HUB_PASSWORD = credentials('dckr_pat_EtOOiCJ1dedZ9GSJ1E8buzC15_A')
    }
    stages {
        stage('verify') {
            steps {
                sh '''
                    docker info
                    docker version
                    docker compose version
                    curl --version
                '''
            }
        }
        stage('logout') {
            steps {
                script {
                    sh 'docker logout'
                }
            }
        }
        stage('login docker') {
            steps {
                sh 'docker info > /dev/null 2>&1'
                script {
                    withDockerRegistry([credentialsId: 'docker-hub-credentials', url: DOCKER_HUB_REGISTRY]) {
                        sh "docker login -u ${DOCKER_HUB_USERNAME} -p ${DOCKER_HUB_PASSWORD}"
                    }
                }
            }
        }
        stage('Build docker') {
            steps {
                dir('softtool-docker') { // change directory to Lab_docker_Jenkins
                    sh 'docker-compose build'
                }
            }
        }
        stage('Push to docker hub') {
            steps {
                sh 'docker-compose push'
            }
        }
        stage('Trigger Slave') {
            steps {
                script {
                    build job: 'slave'
                }
            }
        }
    }
}