/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    stages {
        stage('Initialize Stage') {
            steps {
                sh 'sudo docker-compose down --rmi all --volumes || true'
            }
        }
        stage('Build docker') {
            steps {
                sh 'sudo docker-compose build'
            }
        }
        stage('Push to docker hub') {
            steps {
                sh 'sudo docker-compose push'
            }
        }
        stage('Trigger Slave') {
            steps {
                script {
                    build job: 'slave'
                }
            }
        }
    }
}