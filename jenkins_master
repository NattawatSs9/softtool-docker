pipeline {
    agent any
    stages {
        stage('verify') {
            steps {
                sh '''
                    docker info
                    docker version
                    docker compose version
                    curl --version
                    jq --version
                '''
            }
        }
        stage('Build docker') {
            steps {
                dir('softtool-docker') { // change directory to Lab_docker_Jenkins
                    sh 'docker-compose up -d'
                }
            }
        }
        stage('Push to docker hub') {
            steps {
                sh 'docker-compose push'
            }
        }
        stage('Trigger Slave') {
            steps {
                script {
                    build job: 'slave'
                }
            }
        }
    }
}