pipeline {
    agent any
    stages {
        stage('verify') {
            steps {
                sh '''
                    docker info
                    docker version
                    docker compose version
                    curl --version
                '''
            }
        }
        stage('login docker') {
            steps {
                sh 'docker info > /dev/null 2>&1'
                script {
                    def returnCode = sh returnStatus: true, script: 'docker info > /dev/null 2>&1'
                    if (returnCode == 0) {
                        echo 'user already login with docker'
                    } else {
                        sh 'docker login -u nattawat2345 --password dckr_pat_qDRxeTRGUpzU_65KF4W-gokKB4U'

                    }
                }
            }
        }
        stage('Build docker') {
            steps {
                dir('softtool-docker') { // change directory to Lab_docker_Jenkins
                    sh 'docker-compose build'
                }
            }
        }
        stage('Push to docker hub') {
            steps {
                sh 'docker-compose push'
            }
        }
        stage('Trigger Slave') {
            steps {
                script {
                    build job: 'slave'
                }
            }
        }
    }
}