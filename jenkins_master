/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent any

    stages {
        stage('verify tooling') {
            steps {
                sh '''
                    docker info
                    docker version
                    docker compose version
                    curl --version
                    jq --version
               '''
            }
        }
        stage('Build docker') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Push to docker hub') {
            steps {
                sh 'docker-compose push'
            }
        }
        stage('Trigger Slave') {
            steps {
                script {
                    build job: 'slave'
                }
            }
        }
    }
}